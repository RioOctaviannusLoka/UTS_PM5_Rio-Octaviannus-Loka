<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UTS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="page_title_background">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="page_title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    
    <style name="heading">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="heading.semibold">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="heading.bold">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="Logo">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="placeholder">
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/darker_grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="question_bg">
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="primaryButton">
        <item name="cornerRadius">87dp</item>
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="primaryButton.orange">
        <item name="android:backgroundTint">@color/tertiary</item>
    </style>

    <style name="primaryButton.answers">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="primaryButton.answers2">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="primaryButton.correctAnswers">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="primaryButton.correctAnswers2">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>
    
    <style name="secondaryButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:backgroundTint">@color/tertiary</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="Theme.UTS" parent="Base.Theme.UTS" />
</resources>